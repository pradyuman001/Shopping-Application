<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.signingActivity.view.signingActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/headerTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/rubik_bold"
            android:text="SIGN IN"
            android:textColor="#FEC200"
            android:textSize="@dimen/_25ssp" />

        <RelativeLayout
            android:id="@+id/nameErrorRelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headerTxt"
            android:layout_marginLeft="@dimen/_20sdp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/errorImage"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/error" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toEndOf="@+id/errorImage"
                android:fontFamily="@font/rubik_light"
                android:text="Please Enter Full Name"
                android:textColor="#FF0000"
                android:textStyle="bold" />

        </RelativeLayout>

        <EditText
            android:id="@+id/fullNameEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@id/nameErrorRelativeLayout"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@drawable/custom_edittext"
            android:drawableStart="@drawable/custom_fullname_icon"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/rubik_regular"
            android:hint="Full Name"
            android:inputType="textCapWords"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColorHint="#D5DCE8"
            android:textSize="@dimen/_15ssp" />

        <RelativeLayout
            android:id="@+id/usernameErrorRelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fullNameEditText"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:visibility="gone">


            <ImageView
                android:id="@+id/errorImage2"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/error" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toEndOf="@+id/errorImage2"
                android:fontFamily="@font/rubik_light"
                android:text="Please Enter User Name"
                android:textColor="#FF0000"
                android:textStyle="bold" />

        </RelativeLayout>

        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@id/usernameErrorRelativeLayout"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@drawable/custom_edittext"
            android:drawableStart="@drawable/custom_username_icon"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/rubik_regular"
            android:hint="Username"
            android:inputType="textNoSuggestions"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColorHint="#D5DCE8"
            android:textSize="@dimen/_15ssp" />

        <RelativeLayout
            android:id="@+id/emailErrorRelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usernameEditText"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:visibility="gone">


            <ImageView
                android:id="@+id/errorImage3"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/error" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toEndOf="@+id/errorImage3"
                android:fontFamily="@font/rubik_light"
                android:text="Please Enter Email Address"
                android:textColor="#FF0000"
                android:textStyle="bold" />

        </RelativeLayout>


        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@id/emailErrorRelativeLayout"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@drawable/custom_edittext"
            android:drawableStart="@drawable/custom_email_icon"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/rubik_regular"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColorHint="#D5DCE8"
            android:textSize="@dimen/_15ssp" />

        <RelativeLayout
            android:id="@+id/passwordErrorRelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailEditText"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:visibility="gone">


            <ImageView
                android:id="@+id/errorImage4"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/error" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toEndOf="@+id/errorImage4"
                android:fontFamily="@font/rubik_light"
                android:text="Please Enter Password"
                android:textColor="#FF0000"
                android:textStyle="bold" />

        </RelativeLayout>


        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@id/passwordErrorRelativeLayout"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@drawable/custom_edittext"
            android:drawableStart="@drawable/custom_password_icon"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/rubik_regular"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColorHint="#D5DCE8"
            android:textSize="@dimen/_15ssp" />

        <CheckBox
            android:id="@+id/passwordCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwordEditText"
            android:layout_marginLeft="@dimen/_15sdp" />

        <TextView
            android:id="@+id/passwordTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/passwordEditText"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_18sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_toEndOf="@+id/passwordCheckBox"
            android:fontFamily="@font/rubik_regular"
            android:text="Show Password" />

        <!--android:drawableEnd="@drawable/hide"-->

        <Button
            android:id="@+id/signinButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/passwordTxt"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/rubik_regular"
            android:text="Sign In"
            android:textColor="@color/black"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/loginRelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_40sdp">

        <TextView
            android:id="@+id/userTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_regular"
            android:text="Already have a Account ? "
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/signInTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toEndOf="@+id/userTxt"
            android:fontFamily="@font/rubik_regular"
            android:text="LOG IN"
            android:textColor="#FEC200"
            android:textSize="@dimen/_12sdp" />

    </RelativeLayout>


</RelativeLayout>